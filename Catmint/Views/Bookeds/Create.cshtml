<h1>Create</h1>

<h4>Booked</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="table_id" class="form-control" value="@Get.table_num" readonly />
                <label asp-for="table_id" class="control-label"></label>
                <span asp-validation-for="table_id" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="user_id" class="form-control" value="@Get.ID" readonly />
                <label asp-for="user_id" class="control-label"></label>
                <span asp-validation-for="user_id" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="booked_date" class="form-control" value="@Get.BookTime.ToString("yyyy-MM-dd HH:mm")" type="datetime-local" readonly />
                <label asp-for="booked_date" class="control-label"></label>
                <span asp-validation-for="booked_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" onclick="confirmBooking()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div> 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
