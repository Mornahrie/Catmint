@model Catmint.Models.User

@{
    ViewData["Title"] = "Create";
}


<h1>Зарегистрироваться</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="right_id" class="form-control" value="2" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="cat_id" class="form-control" value="NULL" hidden />
            </div>
            <div class="form-floating">
                <input asp-for="name" class="form-control" />
                <label asp-for="name" class="control-label"></label>
                
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="surname" class="form-control" />
                <label asp-for="surname" class="control-label"></label>
                
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="fathername" class="form-control" />
                <label asp-for="fathername" class="control-label"></label>
                
                <span asp-validation-for="fathername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sex_id" class="control-label"></label>
                <select asp-for="sex_id" style="margin-top: 12px; margin-bottom: 24px;">
                    <option value="1">Женский</option>
                    <option value="2">Мужской</option>
                </select>
                <span asp-validation-for="sex_id" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="date_of_birth" class="form-control" type="date" />
                <label asp-for="date_of_birth" class="control-label"></label>
               
                <span asp-validation-for="date_of_birth" class="text-danger"></span>
            </div>
            <div class="form-floating">
               <input asp-for="phone_num" name="phone_num" id="phone_num" class="form-control" />
               <label asp-for="phone_num" class="control-label"></label>
                
                <span asp-validation-for="phone_num" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="email" class="form-control" />
                <label asp-for="email" class="control-label"></label>
               
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="login" class="form-control" />
                <label asp-for="login" class="control-label"></label>
               
                <span asp-validation-for="login" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="password" class="form-control" />
                <label asp-for="password" class="control-label"></label>
               
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Зарегистрироваться" class="btn btn-primary" onclick="confirmRegistration()">
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ToLogin">Войти</a> 
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
