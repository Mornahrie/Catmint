@model IEnumerable<Catmint.Models.Menu>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.category_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dish_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dish_price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.weight)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.category_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dish_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dish_price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.weight)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.dish_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.dish_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.dish_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
